{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "auth-route": {
                "ClusterId": "auth-cluster",
                "Match": {
                    "Path": "/api/auth/{**remainder}"
                }
            },
            "restaurant-route": {
                "ClusterId": "restaurant-cluster",
                "Match": {
                    "Path": "/api/restaurants/{**remainder}"
                }
            },
            "order-route": {
                "ClusterId": "order-cluster",
                "Match": {
                    "Path": "/api/orders/{**remainder}"
                }
            },
            "customer-route": {
                "ClusterId": "customer-cluster",
                "Match": {
                    "Path": "/api/customers/{**remainder}"
                }
            },
            "admin-route": {
                "ClusterId": "admin-cluster",
                "Match": {
                    "Path": "/api/admin/{**remainder}"
                }
            }
        },
        "Clusters": {
            "auth-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8081/"
                    }
                }
            },
            "restaurant-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8082/"
                    }
                }
            },
            "order-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8083/"
                    }
                }
            },
            "customer-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8080/"
                    }
                }
            },
            "admin-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5050/"
                    }
                }
            }
        }
    }
}